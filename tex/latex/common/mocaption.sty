\ProvidesPackage{mocaption}[Custom Commands to safe time]

% Customising captions in floating environments
\RequirePackage{caption}
\DeclareCaptionLabelSeparator{bar}{~\;\textbar\;}
\captionsetup[table]{position=top}
\captionsetup{singlelinecheck=off}
\captionsetup{labelsep=bar,labelfont={bf}}
%% indent between »Figure 1.2« and the descrition in the following line
\setcapindent{0em}

\makeatletter
\newcommand{\mycap}[2][\@nil]{%
	\def\tmp{#1}%
	\ifx\tmp\@nnil
		\caption[#2]{#2\textbf{\textbar}}
	\else
		\caption[#1]{#1\textbf{\textbar}\newline\noindent\normalfont\small #2}
	\fi
}
\makeatother
